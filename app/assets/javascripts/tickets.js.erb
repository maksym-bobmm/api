document.addEventListener('turbolinks:load', function () {
    mapboxgl.accessToken = '<%= Rails.application.secrets.mapbox_map_token %>';

    let map = new mapboxgl.Map({
        container: 'map',
        style: 'mapbox://styles/mapbox/streets-v11',
        center: [-74.5, 40],
        zoom: 9
    });
});